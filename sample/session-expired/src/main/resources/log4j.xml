<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE log4j:configuration SYSTEM "log4j.dtd" >
<log4j:configuration xmlns:log4j="http://jakarta.apache.org/log4j/">

    <appender name="CONSOLE" class="org.apache.log4j.ConsoleAppender">
        <layout class="org.apache.log4j.PatternLayout">
            <param name="ConversionPattern" value="%d %p [%C{1}.%M(%L)] | %m%n"/>
        </layout>
    </appender>

    <appender name="DAILYFILE" class="org.apache.log4j.DailyRollingFileAppender">
        <param name="File" value="target/log.log"/>
        <param name="Append" value="true"/>
        <param name="DatePattern" value="yyyy-MM-dd"/>
        <param name="Encoding" value="UTF-8"/>
        <layout class="org.apache.log4j.PatternLayout">
            <param name="ConversionPattern" value="%d %p [%C{1}.%M(%L)] | %m%n"/>
        </layout>
    </appender>

    <appender name="DAILYFILE-marrom" class="org.apache.log4j.FileAppender">
        <param name="File" value="target/marrom.log"/>
        <param name="Append" value="true"/>
        <param name="DatePattern" value="yyyy-MM-dd"/>
        <param name="Encoding" value="UTF-8"/>
        <layout class="org.apache.log4j.PatternLayout">
            <param name="ConversionPattern" value="%d %p [%C{1}.%M(%L)] | %m%n"/>
        </layout>
    </appender>

    <logger name="com.marrom">
        <level value="DEBUG"/>
        <appender-ref ref="CONSOLE"/>
        <appender-ref ref="DAILYFILE-marrom"/>
    </logger>

    <logger name="org.springframework">
        <level value="DEBUG"/>
        <appender-ref ref="CONSOLE"/>
        <appender-ref ref="DAILYFILE"/>
    </logger>

    <logger name="org.hibernate">
        <level value="DEBUG"/>
        <appender-ref ref="CONSOLE"/>
        <appender-ref ref="DAILYFILE"/>
    </logger>

    <root>
        <level value="DEBUG"/>
        <appender-ref ref="CONSOLE"/>
        <appender-ref ref="DAILYFILE"/>
    </root>

</log4j:configuration>